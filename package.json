{
  "name": "restify-sample",
  "version": "1.0.0",
  "description": "Sample app created to learn restify framework.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "local-development": "nodemon lib/index.js --exec babel-node",
    "build": "babel lib -d dist",
    "serve": "node dist/index.js",
    "deploy": "npm run build && npm run docker",
    "docker": "docker build -t tryantwit/node-web-app .",
    "docker-run": "docker run -p 8080:8080 -d tryantwit/node-web-app",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nodejs",
    "restify",
    "es6"
  ],
  "author": "Tim Ryan <tryan@valcom.com>",
  "license": "ISC",
  "dependencies": {
    "restify": "^5.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "nodemon": "^1.11.0"
  }
}
